<h1>Log In</h1>

<%= form_tag sessions_path, method: :post do %>
  <%= hidden_field_tag :return_to, params[:return_to] %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag 'Log In!' %>
<% end %>
